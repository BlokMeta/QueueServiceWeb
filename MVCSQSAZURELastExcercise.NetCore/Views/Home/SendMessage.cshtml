@model ProduceMessageServices.NetCore.Models.SendQueueModel


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <script src="https://kit.fontawesome.com/d0e88be18f.js" crossorigin="anonymous"></script>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
          crossorigin="anonymous" />

    <style>
        .bird {
            position: relative;
            width: 1500px;
            margin: 0px -100px;
            height: 150px;
        }

            .bird i {
                font-size: 125px;
                transition: .3s;
            }

        .container {
            padding: 10px 20px;
            height: 10px;
        }

        .btn {
            position: center;
            width: 960px;
            margin: 0px auto;
        }

        .col-form-label {
            position: center;
            width: auto;
            height: auto;
            margin-left: -100px;
        }

    </style>

</head>
<body>

    <div class="bird animate__animated animate__fadeInBottomLeft">
        <i class="fas fa-crow fa-5x"></i>
    </div>
    <div class="text-center">
        <form asp-controller="Home" asp-action="SendMessage" method="post" enctype="multipart/form-data">
            <div class="form-group row mb-9">
                <label class="col-form-label col-sm-4"><b>Message:</b></label>
                <div class="col-sm-9">
                    <input type="text" asp-for="Messages" class="form-control" />
                </div>
                <br /><br />
            </div>

            <div class="row">
                <div class="card-body">
                    <div class="form-group row mb-9">
                        <div class="col-sm-9">
                            <button type="submit" id="btnSend" class="btn btn-primary">Send Message</button>
                            <script>
                                let birdIcon = document.querySelector('.bird');
                                let icon = document.querySelector('.bird i');
                                let btnSend = document.querySelector("#btnSend")
                                icon.style.position = 'absolute';

                                btnSend.addEventListener("click", function () {
                                    let posX = 0;
                                    let animate = setInterval(function () {

                                        icon.style.left = posX + "px";
                                        posX += 20

                                        if (posX >= 1000) {
                                            clearInterval(animate)
                                            icon.style.transform = "scaleX(-1)"                                            
                                        }
                                    }, 30);

                                })

                            </script>
                        </div>
                    </div>
                    <br />
                </div>
            </div>
        </form>
    </div>

</body>
</html>

